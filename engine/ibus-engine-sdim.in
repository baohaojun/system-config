prefix=@prefix@
datarootdir=@datarootdir@
datadir=@datadir@
export IBUS_TABLE_LOCATION=@datarootdir@/ibus-sdim
mkdir -p ~/.ibus/sdims/
echo "$@" at `date` >> ~/.ibus/sdims/start.log

for arg in $@; do
	case $arg in
	--xml | -x)
		exec python @datarootdir@/ibus-sdim/engine/main.py --xml;;
	--help | -h)
		exec python @datarootdir@/ibus-sdim/engine/main.py $@;;
  *)
    # first running speedmeter as a daemon
    #python @datarootdir@/ibus-sdim/engine/speedmeter.py -d > /dev/null

    # then start our IME
    exec python @datarootdir@/ibus-sdim/engine/main.py $@
    exit 0
	esac
done

