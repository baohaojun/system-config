(mapc (lambda (start-and-end)
        (let ((start (car start-and-end))
              (end (cdr start-and-end)))
          (do ((c start))
              ((> c end) nil)
            (setq cs (format nil "%c" c))
            (bind-keys esc-x-keymap cs `(synthesize-event-gnome? ,(format nil "M-%s" cs) (input-focus)))
            (setq c (1+ c)
                  cs (format nil "%c" c)))))
      '((?a . ?z) (?A . ?Z)))

