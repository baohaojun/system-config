(defun bhj-global-cycle-class (window)
  (let ((class (bhj-window-class window)))
    (cond
     ((string-match im-class class 0 t)
      im-class)
     ((string-match br-class class 0 t)
      br-class)
     ((string-match dc-class class 0 t)
      dc-class)
     (t
      class))))

