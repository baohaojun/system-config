#!/usr/bin/env bash

## start code-generator "^\\s *#\\s *"
# generate-getopt -P kkeep
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o kh \
                      --long keep,help,no-keep \
                      -n $(basename -- $0) -- "$@")
declare keep=false
eval set -- "$TEMP"
while true; do
    case "$1" in

        -k|--keep|--no-keep)
            if test "$1" = --no-keep; then
                keep=false
            else
                keep=true
            fi
            shift

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-k, '
            printf %-24s '--[no-]keep'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if test -e ~/.reset-env.$INTERACTIVE_BASH_PID; then
    . ~/.reset-env.$INTERACTIVE_BASH_PID
    if test "$keep" = false; then
        rm -f ~/.reset-env.$INTERACTIVE_BASH_PID
    fi
fi
