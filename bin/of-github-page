#!/bin/bash

if test ${1:0:1} = /; then
    cd "$(dirname "$1")"
fi

set -- $(relative-path $1 $(lookup-file .git))

site=http://baohaojun.github.io
if test -e .github-page; then
    site=$(cat .github-page)
fi
x=$site/${1/%.org/.html}

echo "$x"
if is-tty-io; then
    echo "$x"|putclip
fi

if test $(basename $0) != github-pagep; then
    firefox "$x"
fi
