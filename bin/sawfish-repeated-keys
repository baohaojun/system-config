#!/usr/bin/env bash

## start code-generator "^\\s *#\\s *"
# generate-getopt n:n_inputs=1 k:input-keys=
## end code-generator
## start generated code
TEMP=$( getopt -o k:n:h \
               --long input-keys:,n_inputs:,help \
               -n $(basename -- $0) -- "$@")
input_keys=
n_inputs=1
eval set -- "$TEMP"
while true; do
    case "$1" in

        -k|--input-keys)
            input_keys=$2
            shift 2
            ;;
        -n|--n_inputs)
            n_inputs=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-k, '
            printf %-24s '--input-keys=INPUT_KEYS'
            echo
            printf %06s '-n, '
            printf %-24s '--n_inputs=N_INPUTS'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

sawfish-wait-for-start

for x in $(seq 1 $n_inputs); do
    sawfish-browser-input $input_keys;
done
