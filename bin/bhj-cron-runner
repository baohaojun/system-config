#!/bin/bash

. ~/system-config/.bashrc
. ~/.config/system-config/ssh-agent || true
run_dir=$(basename $1)

export USER=$(whoami) #in cron daemon, this env variable is not set by default.
export RUNNING_IN_CRON=true

logdir=~/.cache/system-config/logs/cron-log/$run_dir
mkdir -p $logdir

exec > $logdir/bhj-cron-runner 2>&1
set -e
set -x

function die() {
    echo "$@"
    exit -1
}

for dir in ~/system-config/etc/cron.d/$run_dir ~/external/etc/cron.d/$run_dir; do
    if test ! -d $dir; then
        continue
    fi
    cd $dir

    for x in ./*; do
        if test "$x" != "${x%.stackdump}" -o -d "$x"; then
            continue
        fi
        chmod +x $x || true
        test -e $x || continue
        ld=$logdir/$x/$(date +%A)/
        mkdir -p $ld
        ($x || bhj-notify cron-runner "$x failed: errno $?" &) > $ld/$(date +%H:%M) 2>&1
    done
done&
