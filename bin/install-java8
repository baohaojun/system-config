#!/bin/bash

set -e

if test ! -e /usr/lib/jvm/java-8-openjdk-amd64/bin/javac; then
    hint "将为你的 $(lsb_release -i -s -r|tr '\n' ' ' )安装 openjdk 8，可能需要输入sudo密码"
    u_version=$(lsb_release -r -s)

    if test "$u_version" = 14.04 -o "$u_version" = 12.04 ||
       yes-or-no-p "Use ppa for installing openjdk8 for $u_version?"; then
        sudo add-apt-repository ppa:openjdk-r/ppa
        sudo apt-get update
    fi
    sudo apt-get install -y openjdk-8-jdk
fi || if test -e ~/src/github/smartcm/scm-helpers/.install-java8; then
    . ~/src/github/smartcm/scm-helpers/.install-java8;
fi || true
