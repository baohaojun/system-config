#!/bin/bash
set -e

[[ "$1" =~ .zip$ ]]
FILE=`readlink -f "$1"`
DIR=${FILE}
if test "$2"; then
    DIR=$(readlink -m "$2")
else
    DIR=$(readlink -f "$(dirname "$DIR")")/$(basename "$DIR").$$
fi

mkdir -p "$DIR"

TD=$DIR.td
mkdir $TD

(
    cd $TD

    LANG=C LC_ALL=C 7z x "$FILE" >/dev/null 2>&1
    convmv -f gbk -t utf8 -r --notest -- * >/dev/null 2>&1
)
mv $TD/* "$DIR" -v
rmdir $TD
cd "$DIR"
fix-deep-dirs
