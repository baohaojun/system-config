#!/bin/bash

chm=$(readlink -f "$1")
dir=~/.cache/system-config/for-code-reading/chm/"$chm"

if ! test -e "$dir"; then
    (
	archmage -x "$chm" /tmp/archmage-ffchm.$$ &&
	mkdir -p "$(dirname "$dir")" &&
	mv /tmp/archmage-ffchm.$$ "$dir" 
    ) || (
	rm -rf "$dir"; 
	extract_chmLib "$chm" "$dir"
    )
fi

if test -e "$dir"/index.html; then
    cd "$dir";
    firefox index.html&
else
    cd "$dir"
    firefox . &
fi

