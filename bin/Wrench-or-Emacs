#!/bin/bash

top_window=$(
    sawfish-top-window
          )

if test "${top_window}" != Emacs -o "$(emacs-current-file | perl -pe 's,.*/,,')" != chat.org; then
    find-or-exec Emacs
    emacsclient -e "$(
cat <<'EOF6a5a109f8722'
; {%emacs-lisp-mode%}
(progn
  (sanityinc/toggle-delete-other-windows)
  (switch-to-file (expand-file-name "~/src/github/projects/chat.org"))
  (mark-whole-buffer))
; {%/emacs-lisp-mode%}
EOF6a5a109f8722

)"
else
    Wrench.sh
fi
