#!/bin/bash

# This script is short for "Gerrit Rest".

set -e
## start code-generator "^\\s *#\\s *"
# generate-getopt -P u:username p:password
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o p:u:h \
                      --long password:,username:,help \
                      -n $(basename -- $0) -- "$@")
declare password=
declare username=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -p|--password)
            password=$2
            shift 2

            ;;
        -u|--username)
            username=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-p, '
            printf %-24s '--password=PASSWORD'
            echo
            printf %06s '-u, '
            printf %-24s '--username=USERNAME'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if test -z "${username}" -a -e ~/.config/org-kungfu/config.ini; then
    username=$(git config -f ~/.config/org-kungfu/config.ini ok.username)
    if test -z "${password}"; then
        password=$(git config -f ~/.config/org-kungfu/config.ini ok.password)
    fi
elif test -z "${username}"; then
    username=${scm_gerrit_user}
    password=${scm_gerrit_password}
fi

gerrit_url=${scm_gerrit_url}

gr-delete-patch() {

    ## start code-generator "^\\s *#\\s *"
    # generate-getopt -P c:change
    ## end code-generator
    ## start generated code
    TEMP=$(POSIXLY_CORRECT=true getopt -o c:h \
                          --long change:,help \
                          -n $(basename -- $0) -- "$@")
    declare change=
    eval set -- "$TEMP"
    while true; do
        case "$1" in

            -c|--change)
                change=$2
                shift 2

                ;;
            -h|--help)
                set +x
                echo -e
                echo
                echo Options and arguments:
                printf %06s '-c, '
                printf %-24s '--change=CHANGE'
                echo
                exit
                shift
                ;;
            --)
                shift
                break
                ;;
            *)
                die "internal error: $(. bt; echo; bt | indent-stdin)"
                ;;
        esac
    done


    ## end generated code

    curl -X DELETE -u "${username}:${password}" ${gerrit_url}/a/changes/${change}
}

_curl() {
    curl -u "${username}:${password}" "$@"
}

gr-set-topic() {
    set -e
    ## start code-generator "^\\s *#\\s *"
    # generate-getopt -P c:change t:topic
    ## end code-generator
    ## start generated code
    TEMP=$(POSIXLY_CORRECT=true getopt -o c:t:h \
                          --long change:,topic:,help \
                          -n $(basename -- $0) -- "$@")
    declare change=
    declare topic=
    eval set -- "$TEMP"
    while true; do
        case "$1" in

            -c|--change)
                change=$2
                shift 2

                ;;
            -t|--topic)
                topic=$2
                shift 2

                ;;
            -h|--help)
                set +x
                echo -e
                echo
                echo Options and arguments:
                printf %06s '-c, '
                printf %-24s '--change=CHANGE'
                echo
                printf %06s '-t, '
                printf %-24s '--topic=TOPIC'
                echo
                exit
                shift
                ;;
            --)
                shift
                break
                ;;
            *)
                die "internal error: $(. bt; echo; bt | indent-stdin)"
                ;;
        esac
    done


    ## end generated code

   _curl -X PUT ${gerrit_url}/a/changes/${change}/topic -H "Content-Type: application/json" -H "charset=UTF-8" --data "$(
cat <<EOF3dc33dfa770d | grep -v '^#'
# {%json-mode%}
  {
    "topic": "$topic"
  }
# {%/json-mode%}
EOF3dc33dfa770d
)
"
}

if test $(type -t gr-"$1") = function; then
    f=gr-$1
    shift
    $f "$@"
else
    die "Can't execute your command: $*"
fi
