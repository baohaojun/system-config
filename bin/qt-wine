#!/bin/bash

function wine() {
    cat > build.bat<<EOF
set path=$(for x in ~/.wine/drive_c/Qt/Qt*/*/mingw*/bin ~/.wine/drive_c/cmake-w32/cmake-3.8.0-rc1-win32-x86/bin; do
               echo $x;
           done |
           perl -npe 'chomp; s!$ENV{HOME}/.wine/drive_c!c:!; s!$!;!')%path%
$@
EOF
    command wine cmd.exe /c build.bat
}

if test $# != 0; then
    wine "$@"
else
    wine cmd.exe
fi
