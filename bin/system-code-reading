#!/bin/bash

code_reading_dirs=(
    /usr/include/ /usr/share/qt5/doc/ /usr/lib /usr/share/java /var/lib/gems/ ~/src/android
)

for d in "${code_reading_dirs[@]}"; do
    (
        cd $d || exit
        if test ! -e .for-code-reading; then
            sudo touch .for-code-reading
        fi
    )
done

for d in "${code_reading_dirs[@]}"; do
    (
        cd $d || exit
        for-code-reading
    )
done
