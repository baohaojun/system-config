#!/bin/bash

set -e

if test $# != 2; then
    die "Error: Usage $(basename $0) ext program"
fi

if test -e "$1"; then
    mime=$(xdg-mime query filetype "$1")
else
    mime=$(cd /tmp; touch $$.$1; xdg-mime query filetype $$.$1; rm $$.$1)
fi

if grep -P -e "^\Q$mime\E=" ~/.local/share/applications/mimeapps.list; then
    perl -npe "s#$mime=.*#$mime=bhj-custom-$2.desktop#" -i ~/.local/share/applications/mimeapps.list
else
    perl -ne 'print; if (m/Applications\]|Associations\]/) {print '\"$mime=bhj-custom-$2.desktop\\n\"';}' \
        -i ~/.local/share/applications/mimeapps.list
fi

cat <<EOF > ~/.local/share/applications/bhj-custom-$2.desktop
[Desktop Entry]
Encoding=UTF-8
Version=1.0
Type=Application
NoDisplay=true
Exec=$(which $2) %u
Name=$(ucfirst $2)
Comment=Custom definition for $(ucfirst $2)
EOF
