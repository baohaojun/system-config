#!/bin/bash
set -e

if test $PWD = $HOME; then
    cd system-config
fi
gitd=$(lookup-file -e .git) || true
if test -z "$gitd"; then
    if [[ $PWD =~ .*\.git ]]; then
        gitd=$PWD
    else
        die "can't find .git"
    fi
fi
if test -e $gitd/svn/.metadata; then
    url=$(git svn info | grep "^URL:" | pn 2 | head -n 1)
else
    test $# == 0 -o -z "$1" && set -- $(repo-remote)

    url=$(git config remote.$1.url)

fi
echo "$url"
if is-tty-io; then
    putclip "$url"
fi
