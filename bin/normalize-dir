#!/usr/bin/env bash


## start code-generator "^\\s *#\\s *"
# generate-getopt s:suffix
## end code-generator
## start generated code
TEMP=$(getopt -o s:h \
              --long suffix:,help \
              -n $(basename -- $0) -- "$@")
suffix=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -s|--suffix)
            suffix=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo
            echo
            echo Options and arguments:
            printf %6s '-s, '
            printf %-24s '--suffix=SUFFIX'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

dir="$(echo "$1"|perl -npe 's,^\./+,,; s,/+,/,g; s,/*$,,')"

if test "$suffix"; then
    echo "${dir%$suffix}$suffix"
else
    echo "$dir"
fi
