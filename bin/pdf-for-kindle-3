#!/bin/bash

set -e

left=18.5mm
bot=18.5mm
right=18.5mm
top=25.0mm
paper=a4
duplicate=5mm
scale=1.2
max=-1

function die() {
    echo "$@"
    exit -1
}

function subtract() {
    perl -e '$sub1 = $ARGV[0]; $sub2 = $ARGV[1];
    $sub1 =~ m/(.*)(..)$/;
    $sub1 = $1;
    if ($2 eq "in") {
        $sub1 *= 2.54;
    }

    $sub2 =~ m/(.*)(..)$/;
    $sub2 = $1;

    if ($2 eq "in") {
        $sub2 *= 2.54;
    }

    print "" . ($sub1 - $sub2) . "mm"
' "$@"
}

function sum() {
    subtract "$1" "$(subtract 0mm "$2")"
}

TEMP=$(getopt -o t:l:r:b:W:H:d:p:s:m:c: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -c)
            top=$2
            bot=$2
            left=$2
            right=$2
            shift 2
            ;;

## start code-generator "^\\s *#"
    # for x in top bot left right; do
        # printf "%s\n"  "-${x:0:1})"
        # printf "%s\n" "$x=\$(sum \$$x \$2)"
        # printf "%s\n" "shift 2"
        # printf "%s\n" ";;"
    # done
## end code-generator
## start generated code
        -t)
            top=$(sum $top $2)
            shift 2
            ;;
        -b)
            bot=$(sum $bot $2)
            shift 2
            ;;
        -l)
            left=$(sum $left $2)
            shift 2
            ;;
        -r)
            right=$(sum $right $2)
            shift 2
            ;;

## end generated code

        -W)
            o_width=$2
            o_size=cust
            shift 2
            ;;
        -H)
            o_size=cust
            o_height=$2
            shift 2
            ;;

        -d)
            duplicate=$2
            shift 2
            ;;
        -p)
            paper=$2
            shift 2
            ;;
        -s)
            scale=$2
            shift 2
            ;;
        -m)
            max=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done
pdf=$1

if test $paper = a4; then
    o_width=210mm
    o_height=297mm
elif test $paper = ul; then
    o_width=215.9mm
    o_height=279.4mm
else
    die "Error: old paper size must be one of 'a4' or 'ul'"
fi

n_width=$(subtract $o_width $left)
n_width=$(subtract $n_width $right)

n_height=$(subtract $o_height $top)
n_height=$(subtract $n_height $bot)

function scale() {
    perl -e '$h = $ARGV[0];
    $h =~ s/^(.*)mm$/$1/;
    $h *= $ARGV[1];
    print "$h" . "mm"
' "$@"
}

function debug() {
    echo "$@" 1>&2
}

third_n_height=$(scale $n_height 0.333333)
debug "third_n_height is $third_n_height"
third_n_height_2=$(scale $third_n_height 2)
debug "third_n_height_2 is $third_n_height_2"

cut_1_bot=$(subtract $third_n_height_2 $duplicate)

cut_2_top=$(subtract $third_n_height $duplicate)
cut_2_bot=$cut_2_top

cut_3_top=$cut_1_bot

remaining_n_height=$third_n_height

test $# != 1 && die "Error: Usage $(basename $0) PDF"

test -e $pdf || die "Error: $pdf does not exist";

pdf=${pdf%.pdf}

pdfnup --no-landscape --rotateoversize false  --nup 1x1 --papersize "{$n_width,$n_height}"           --trim "$left $bot $right $top" "$pdf".pdf
cp "$pdf"-nup.pdf cut-"$pdf".pdf
pdfnup --no-landscape --rotateoversize false  --nup 1x1 --papersize "{$n_width,$remaining_n_height}" --trim "0 $cut_1_bot 0 0" --suffix top "$pdf"-nup.pdf
pdfnup --no-landscape --rotateoversize false  --nup 1x1 --papersize "{$n_width,$remaining_n_height}" --trim "0 $cut_2_bot 0 $cut_2_top" --suffix mid "$pdf"-nup.pdf
pdfnup --no-landscape --rotateoversize false  --nup 1x1 --papersize "{$n_width,$remaining_n_height}" --trim "0 0 0 $cut_3_top" --suffix bot "$pdf"-nup.pdf


x=0;

while true; do
    ((x++)) || true;
    if test $max -gt 0 -a $x -gt $max; then
        break
    fi

    if ! pdfjoin --no-landscape --rotateoversize false  "$pdf"-nup-top.pdf $x "$pdf"-nup-mid.pdf $x "$pdf"-nup-bot.pdf $x; then
        break
    fi
done

((y=x-1))
for x in $(seq 1 $y); do echo "$pdf"-nup-bot-$x-joined.pdf; done|xargs pdfjoin --no-landscape --rotateoversize false 

if test $scale != 1; then
    n_width=$(scale $n_width $scale)
    remaining_n_height=$(scale $remaining_n_height $scale)
    pdfnup --no-landscape --rotateoversize false  --nup 1x1 --papersize "{$n_width,$remaining_n_height}" --scale $scale --noautoscale true "$pdf"-nup-bot-$y-joined-joined.pdf
    mv "$pdf"-nup-bot-$y-joined-joined-nup.pdf "$pdf"-nup-bot-$y-joined-joined.pdf
fi

pdf90 "$pdf"-nup-bot-$y-joined-joined.pdf

mv "$pdf"-nup-bot-$y-joined-joined-rotated90.pdf kindle-"$pdf".pdf
rm -rf "$pdf"-nup*.pdf
