#!/bin/bash
set -x
## start code-generator "^\\s *#\\s *"
# generate-getopts rroot eedit droot
## end code-generator
## start generated code
root=false
edit=false
root=false
OPTIND=1
while getopts 'red' opt; do
    case "$opt" in
        r)    root=true;;
        e)    edit=true;;
        d)    root=true;;
        *)    echo Usage Error; exit 2;;
    esac
done
shift $(($OPTIND - 1))

## end generated code

if test $# = 1; then
    set -- "$1" "$(basename "$1"|perl -npe 's/pt-//')"
fi

if test "$root" = true; then
    root=-d
else
    root=
fi

if test "$edit" = true; then
    edit=-e
else
    edit=
fi
my-adb 'ln -s /dev/block/platform/soc.0/* /dev/block/platform/'
if my-adb id | grep 'uid=0\b' -P -q; then
    su=
    adb-push $edit $root $1 /data/;
else
    su='su -c'
    adb push $1 /data/$(basename $1)
fi
my-adb shell $su "set -x; dd if=/data/$(basename $1) of=\$(echo /dev/block/platform/*/by-name/$2)"
my-adb shell sync
