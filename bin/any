#!/usr/bin/env bash

set -e
## start code-generator "^\\s *#\\s *"
# generate-getopt p:predicate
## end code-generator
## start generated code
TEMP=$( getopt -o p:h \
               --long predicate:,help \
               -n $(basename -- $0) -- "$@")
declare predicate=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -p|--predicate)
            predicate=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-p, '
            printf %-24s '--predicate=PREDICATE'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code
for x in "$@"; do
    if $predicate "$x"; then
        exit 0
    fi
done
exit 1
