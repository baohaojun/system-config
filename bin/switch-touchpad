#!/bin/bash
. ~/.renew-xauth
if test "$1" = disable -o "$1" = off; then
    synclient TouchpadOff=2
    # sawfish-client -e '(bind-keys window-keymap "Button1-Click" (lambda () (system "rebind-button1&")))'
    exit
fi

finger_high=80
if test $(get-about-me mach) = vostro; then
    finger_high=15
fi
if test -e ~/.config/about_me/touchpad-finger-high; then
    finger_high=$(cat ~/.config/about_me/touchpad-finger-high)
fi
synclient FingerHigh=$finger_high
synclient TouchpadOff=0
synclient PalmDetect=1
synclient RTCornerButton=0
synclient RBCornerButton=0
synclient LTCornerButton=0
synclient LBCornerButton=0
synclient LockedDrags=1

synclient TapButton1=1
synclient TapButton2=3
synclient TapButton3=2
synclient TapAndDragGesture=1

synclient VertTwoFingerScroll=1
synclient HorizTwoFingerScroll=1

# rebind-button1
exit
