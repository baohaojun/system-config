#!/usr/bin/env bash
set -e

## start code-generator "^\\s *#\\s *"
    # generate-getopt -P n:name '?"Snippet 的名字"' \
        # s:snippet '?"Snippet 的内容"' \
        # m:mode=fundamental-mode '?"可以加 -mode，也可以不加，默认是 fundamental"'
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o m:n:s:h \
                      --long mode:,name:,snippet:,help \
                      -n $(basename -- $0) -- "$@")
declare mode=fundamental-mode
declare name=
declare snippet=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -m|--mode)
            mode=$2
            shift 2

            ;;
        -n|--name)
            name=$2
            shift 2

            ;;
        -s|--snippet)
            snippet=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-m, '
            printf %-24s '--mode=MODE'
            echo "可以加 -mode，也可以不加，默认是 fundamental"
            printf %06s '-n, '
            printf %-24s '--name=NAME'
            echo "Snippet 的名字"
            printf %06s '-s, '
            printf %-24s '--snippet=SNIPPET'
            echo "Snippet 的内容"
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if ! [[ $mode =~ -mode$ ]]; then
    mode=$mode-mode
fi

s_dir=~/src/github/yasnippet-snippets/$mode
mkdir -p $s_dir
cd $s_dir

if test ! -e $name; then
    cat <<EOF > $name
# -*- mode: snippet -*-
# name: $name
# --
$snippet
EOF
fi
e $name
