#!/bin/bash
function die() {
    echo Error: "$@"
    exit -1
}

function rdesktop() {

    kbd=en-dvp
    TEMP=$(getopt -o k: -n $(basename $0) -- "$@")
    eval set -- "$TEMP"
    while true; do
        case "$1" in
            -k)
                kbd=$2
                shift 2
                ;;
            --)
                shift
                break
                ;;
            *)
                die "internal error"
                ;;
        esac
    done
    host=$1
    shift
    if test "$1"; then
        user=$1
        shift
    else
        user=$(select-output-line "grep -P -e "$host" ~/.authinfo | pn 4 | sort -u")
    fi

    set -- -k $kbd -r clipboard:PRIMARYCLIPBOARD "$@"
    pass=$(get-authinfo $host $user rdesktop)
    if test -z "$pass"; then
        read -p "Password: " -s pass
    fi
    setsid /usr/bin/rdesktop -K -a 24 -g $(xrandr |grep '\*'|pn 1 | head -n 1) $host -u $user -p $pass "$@"&
}

rdesktop "$@"
