#!/bin/bash
if echo $SHELLOPTS | grep xtrace; then
    function debug() {
        read -p "press any key to continue..."
    }
else
    function debug() {
        sleep .5
    }
fi
if test "$(gettask-android)" = com.android.browser; then
    adb-wide-tap 983 727
    adb-wide-tap-2 1031 274
    adb-wide-tap 767 291
elif test "$(gettask-android)" = com.tencent.mm; then
    adb-tap 990 114
    adb-tap 666 847
    #adb-tap 666 999
    firefox -new-tab "$(getclip-android)"
    exit
elif test "$(gettask-android)" = com.tencent.mobileqq; then
    adb-tap 990 114
    adb-tap 367 1486
    firefox -new-tab "$(getclip-android)"
    exit
elif test "$(gettask-android)" = com.sina.weibo; then
    adb-tap 990 114
    adb-tap 318 1562
    firefox -new-tab "$(getclip-android)"
    exit
else # firefox?
    adb-swipe 200 300 200 1000
    adb-wide-tap 920 400
    debug
    adb-wide-tap 920 107
    debug
    adb-wide-tap 853 91
    debug
    adb-wide-tap 683 279
fi

sleep .5
popup_win=$(adb dumpsys window | grep '^  Window.*#.*popupw' -P -i -A 8 | perl -ne 'm/mShownFrame=\[(\d+).0,(\d+).0\]/ and print "$1 $2\n"'| head -n 1)
xy=($popup_win)
x=${xy[0]}
y=${xy[1]}

# 624 400
adb-tap $((x + 624 - 355)) $((y + 400 - 302))
firefox -new-tab "$(getclip-android)"
