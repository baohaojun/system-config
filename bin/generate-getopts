#!/usr/bin/perl
use strict;

use Getopt::Long;
my $local;
GetOptions(
    "l!" => sub {$local = "local "; },
    );

my @args;
for (@ARGV) {
    my $opt = substr($_, 0, 1);
    $_ = substr($_, 1);

    my $need_arg = 0;
    if (m/^:/) {
        $need_arg = 1;
        $_ = substr($_, 1);
    }
    my $name = $_;
    my $take_init_value = 0;
    if ($name =~ s/=$//) {
        $take_init_value = 1;
    }
    push @args, {
        opt => $opt,
        need_arg => $need_arg,
        name => $name,
        take_init_value => $take_init_value,
    };
}

for (@args) {
    print $local, $_->{name};
    if ($_->{name} =~ m/=/) {
        $_->{name} =~ s/=.*//;
    } else {
        print "=";
        if ($_->{take_init_value}) {
            print "\${$_->{name}}";
        }
    }

    if (not $_->{need_arg}) {
        print "false";
    }
    print "\n";
}

printf "$local" . "OPTIND=1\n";
printf "while getopts '%s' opt; do\n", join ("", map {$_->{opt} . ($_->{need_arg} ? ':' : '')} @args);
print 'case "$opt" in' . "\n";

for (@args) {
    my ($opt, $need_arg, $name) = @$_{"opt", "need_arg", "name"};
    if ($need_arg) {
        printf '%s)    %s=$OPTARG;;%s', $opt, $name, "\n";
    } else {
        printf '%s)    %s=true;;%s', $opt, $name, "\n";
    }
}

print <<'EOF';
    *)    echo Usage Error; exit 2;;
    esac
done
shift $(($OPTIND - 1))
EOF


