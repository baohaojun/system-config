#!/usr/bin/env bash


## start code-generator "^\\s *#\\s *"
# generate-getopt -P '?ssh-quote OPTIONS HOST cmds...' @:ssh-args
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o h \
                      --long ssh-args:,help \
                      -n $(basename -- $0) -- "$@")
ssh_args=
eval set -- "$TEMP"
while true; do
    case "$1" in

        --ssh-args)
            ssh_args=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo -e ssh-quote OPTIONS HOST cmds...
            echo
            echo Options and arguments:
            printf "%6s" " "
            printf %-24s '--ssh-args=SSH_ARGS'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

declare -a cmd_args

ssh_host=$1
shift

while test "$#" != 0; do
    x=$1
    cmd_args=("${cmd_args[@]}" "$(printf %q "$x")")
    shift
done

if test ${#cmd_args[@]} = 1; then
    cmd_args=(bash -c "${cmd_args[@]}")
fi

en_US ssh ${ssh_args[@]} "$ssh_host" "${cmd_args[@]}"
