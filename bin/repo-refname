#!/bin/bash

TEMP=$(getopt -o B --long branch -n $(basename $0) -- "$@")
branch=
eval set -- "$TEMP"
while true; do
    case "$1" in
        -B|--branch)
            branch=$(git symbolic-ref --short HEAD 2>/dev/null)
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

if test -d "$1"; then
    cd $(lookup-file $1)
    repo-branch
    exit
fi

if test "$branch"; then
    echo $branch
    exit
fi

if test "$REPO_BRANCH"; then
    echo "$REPO_BRANCH"
    exit
fi

if test -z "$(lookup-file -e .repo)"; then
    branch=$(git symbolic-ref HEAD 2>/dev/null | perl -npe 's,.*/,,')
    if test -z "$branch"; then
        echo unknown-bhj
    else
        echo $branch|perl -npe 's,^refs/heads/,,'
    fi
    exit 0
fi
if test "$REPO_INFO"; then
    $REPO_INFO branch
else
    repo forall . -c 'echo $REPO_RREV'
fi
