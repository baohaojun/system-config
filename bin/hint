#!/bin/bash


## start code-generator "^\\s *#\\s *"
# generate-getopt -l -P t:TMOUT
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o t:h \
                      --long TMOUT:,help \
                      -n $(basename -- $0) -- "$@")
declare TMOUT=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -t|--TMOUT)
            TMOUT=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-t, '
            printf %-24s '--TMOUT=TMOUT'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if is-jenkins; then
    echo "$*" 1>&2
    exit
fi

exec >/dev/null

if is-recording || test "$EMACS"; then
    sawfish-ask-for-input -p "$*
请按‘回车’继续.. "
else
    echo 1>&2
    if read -p "
----------------
$*.
请按「回车」继续；或 Ctrl-C 中止.. "; then
        true
    else
        ret=$?
        if test $ret = 142; then
            echo "$TMOUT 秒内未输入，继续.." 1>&2
        fi
    fi
fi || true
