#!/bin/bash


## start code-generator "^\\s *#\\s *"
# generate-getopt t:TMOUT
## end code-generator
## start generated code
TEMP=$(getopt -o t: --long "TMOUT:"  -n $(basename -- $0) -- "$@")
TMOUT=
eval set -- "$TEMP"
while true; do
    case "$1" in
        -t|--TMOUT)
            TMOUT=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

## end generated code

if is-jenkins; then
    echo "$*" 1>&2
    return
fi

exec >/dev/null

if is-recording || test "$EMACS"; then
    sawfish-ask-for-input -p "$*
请按‘回车’继续.. "
else
    echo 1>&2
    read -p "$*.
请按‘回车’继续.. "
fi || true
