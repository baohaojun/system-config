#!/bin/bash

# [[file:~/system-config/knuth-mode/string-join.org::*%E6%9C%80%E7%BB%88%E7%9A%84%E7%89%88%E6%9C%AC%EF%BC%9A][the-ultimate-script]]

set -e

#!/bin/bash

export POSIXLY_CORRECT=true

## start code-generator "^\\s *#\\s *"
# generate-getopt @for-cjk @:sep
## end code-generator
## start generated code
TEMP=$(getopt -o h \
              --long for-cjk,sep:,help,no-for-cjk \
              -n $(basename -- $0) -- "$@")
for_cjk=false
sep=
eval set -- "$TEMP"
while true; do
    case "$1" in

        --for-cjk|--no-for-cjk)
            if test "$1" = --no-for-cjk; then
                for_cjk=false
            else
                for_cjk=true
            fi
            shift
            ;;
        --sep)
            sep=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo
            echo
            echo Options and arguments:
            printf "%06s" " "
            printf %-24s '--[no-]for-cjk'
            echo
            printf "%06s" " "
            printf %-24s '--sep=SEP'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if test -z "$sep"; then
    if test "$for_cjk" = true; then
        sep="â™¥"
    else
        sep=$1
        shift
    fi
fi

if test "$for_cjk" = true; then
    set -- $(echo "$@"|perl -npe "$(cat <<'EOF6dc4c4dfe966'
BEGIN {
    use Encode;
}

$_ = decode_utf8($_);

$_ =~ s,(\p{CJK}), $1 ,g;
$_ = encode_utf8($_);

EOF6dc4c4dfe966
)"
        )
fi
echo -n "$1"
shift
while test $# != 0; do
    echo -n "$sep$1"
    shift
done
# Local Variables: #
# eval: (read-only-mode 1) #
# End: #

# the-ultimate-script ends here
