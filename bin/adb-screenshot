#!/bin/bash


## start code-generator "^\\s *#\\s *"
# generate-getopt x:x=0 y:y=0 s:s=0 '?size' @:cord-orientation eedit
## end code-generator
## start generated code
TEMP=$( getopt -o es:x:y:h \
               --long cord-orientation:,edit,s:,x:,y:,help,no-edit \
               -n $(basename -- $0) -- "$@")
cord_orientation=
edit=false
s=0
x=0
y=0
eval set -- "$TEMP"
while true; do
    case "$1" in

        --cord-orientation)
            cord_orientation=$2
            shift 2
            ;;
        -e|--edit|--no-edit)
            if test "$1" = --no-edit; then
                edit=false
            else
                edit=true
            fi
            shift
            ;;
        -s|--s)
            s=$2
            shift 2
            ;;
        -x|--x)
            x=$2
            shift 2
            ;;
        -y|--y)
            y=$2
            shift 2
            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf "%06s" " "
            printf %-24s '--cord-orientation=CORD_ORIENTATION'
            echo
            printf %06s '-e, '
            printf %-24s '--[no-]edit'
            echo
            printf %06s '-s, '
            printf %-24s '--s=S'
            echo 'size'
            printf %06s '-x, '
            printf %-24s '--x=X'
            echo
            printf %06s '-y, '
            printf %-24s '--y=Y'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done


## end generated code

if [[ "$s" =~ x ]]; then
    W=${s%x*}
    H=${s#*x}
else
    W=$s
    H=$s
fi

if test "$cord_orientation" = 1; then
    tmp_x=$x
    x=$((1080-$y-$H))
    y=$tmp_x
    tmp_w=$W
    W=$H
    H=$tmp_w
fi

X=$(($x + $W))
Y=$(($y + $H))

if test "$x" != 0 -o "$X" != 0; then
    adb shell /data/data/com.android.shell/screencap -x $x -y $y -X $X -Y $Y /sdcard/screen.jpg
    sd_file=screen.jpg
else
    adb shell screencap /sdcard/screen.png
    sd_file=screen.png
fi

if test "$1"; then
    adb pull /sdcard/$sd_file ~/tmp/$$-$sd_file

    if test "${1##*.}" != ${sd_file##*.}; then
        action=convert
    else
        action=mv
    fi
    $action ~/tmp/$$-$sd_file "$1"
    rm -f ~/tmp/$$-$sd_file
    exit
fi

now=`now|perl -npe 's/:/./g'`
mkdir -p ~/shots
now=shots/"$now"
my-adb pull /sdcard/screen.png ~/"$now".png
if test "$edit" = true; then
    gimp ~/"$now".png&
else
    of ~/"$now".png
fi
mp ~/"$now".png | putclip
