#!/usr/bin/env bash
. ~/system-config/.bashrc
. ~/system-config/bin/set-ssh-agent

set -e
. ensure-at-work

(
    cd ~/src/android
    if ! repo sync -j4 -f -d -c; then
        repo_command=$(repo-switch -p)
        rm -rf .repo/manifests*
        $repo_command
        repo sync -j4 -f -d -c
    fi
    repo-changes\?
)
