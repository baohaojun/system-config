#!/bin/bash
. ~/.bashrc
if test -e ~/.config/ssh-agent; then
    . ~/.config/ssh-agent;
fi

set -e

(
    cd ~/src/android-mirror/
    repo sync -j8 -f -m icesky-rom.xml
    repo sync -j8 -f -m sfo-rom.xml
    cd ~/src/android-mirror/kernel/linux.git
    git fetch linus
)

(
    cd ~/src/android
    ~/bin/repo sync -j4 -f
    repo-changes\?
)

if test "$RUNNING_IN_CRON" = true; then
    cron-code-reading
fi
