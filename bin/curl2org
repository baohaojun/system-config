#!/bin/bash

## start code-generator "^\\s *#\\s *"
# generate-getopt -P o:output-dir u:url
## end code-generator
## start generated code
TEMP=$(POSIXLY_CORRECT=true getopt -o o:u:h \
                      --long output-dir:,url:,help \
                      -n $(basename -- $0) -- "$@")
declare output_dir=
declare url=
eval set -- "$TEMP"
while true; do
    case "$1" in

        -o|--output-dir)
            output_dir=$2
            shift 2

            ;;
        -u|--url)
            url=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-o, '
            printf %-24s '--output-dir=OUTPUT_DIR'
            echo
            printf %06s '-u, '
            printf %-24s '--url=URL'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if test -z "$url"; then
    die "Must specify url"
fi

mkdir -p "${output_dir}"
cd "$output_dir"
wget -k --page-requisites -c "$url" "$@"

log url is "$url"
html=${url##*://}

if test ! -f "$html" -a -e "$html/index.html"; then
    html=$html/index.html
fi

if test -f "$html"; then
    cat "$html" | pandoc -f html -t org --wrap=none - >"${html%.html}.org"
    (
        cd "$(dirname "$html")"
        save.-to-git -m "$url"
    )
    e "${html%.html}.org"
else
    die "Can't find html: $html"
fi
