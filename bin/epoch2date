#!/usr/bin/env perl
use DateTime;
use DateTime::TimeZone;
for my $time (@ARGV) {
  if ($time =~ m/(.*?)(\d{13}|\d{10})(?!\d)(.*)/) {
    $time = $2;
    if (length($time) == 13) {
      $time = substr($time, 0, 10);
    }
    # æˆ‘å·²ç»å¿˜è®°äº†ä¸ºä»€ä¹ˆè¦æžè¿™ä¹ˆå¤æ‚ðŸ˜­
    printf "$1%s$3\n", DateTime->from_epoch(epoch => $time, time_zone => DateTime::TimeZone->new( name => "local" )->name());
  } else {
    print $time;
  }
}
