#!/bin/bash

export REPO_INFO=$(
    cd $(lookup-file .repo/..)
    (cd .repo; make -f ~/system-config/etc/generate-repo-info.mk) >/dev/null 2>&1 
    readlink -m .repo/repo_info.pl
)

if test -d "$1"; then
    repo forall "$1" -c bash -c "$2"
elif test -f "$1"; then
    for x in `cat $1`; do 
        repo forall $x -c bash -c "$2"
    done
else
    repo forall -c bash -c "$1"
fi
