#!/usr/bin/expect -f

set host [lindex $argv 0]
set pass [lindex $argv 1]


spawn en_US ssh-passwd -o StrictHostKeyChecking=no $host

set timeout 60

expect {
    -re "\\$" {
        interact
        wait
        exit
    }
    -re "Enter passphrase for.*:" {
        send "$pass\n"
        exp_continue
    }
    -re "'s password:" {
        send "$pass\n"
        exp_continue
    }
}

interact
wait
exit
