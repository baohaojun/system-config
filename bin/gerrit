#!/bin/bash

## start code-generator "^\\s *#\\s *"
# generate-getopts h:host
## end code-generator
## start generated code
host=
OPTIND=1
while getopts 'h:' opt; do
    case "$opt" in
        h)    host=$OPTARG;;
        *)    echo Usage Error; exit 2;;
    esac
done
shift $(($OPTIND - 1))

## end generated code

if test "$GERRIT_HOST"; then
    host=$GERRIT_HOST
fi

if test -z "$host"; then
    host=$(repo-host)
fi

if test -z "$host"; then
    host=$(xmlstarlet sel -B -t -m //default -v @review -n -b $(lookup-file .repo/manifest.xml) | perl -npe 's,.*://,,')
fi
if test -z "$host"; then
    host=$(cat ~/.cache/system-config/last-gerrit-host 2>/dev/null)
    if test -d ~/src/android/bionic/; then
        host=$(
            cd ~/src/android/bionic
            xmlstarlet sel -B -t -m //default -v @review -n -b $(lookup-file .repo/manifest.xml) | perl -npe 's,.*://,,'
            )
    fi
    host=${host:-smartisan}
else
    echo $host > ~/.cache/system-config/last-gerrit-host
fi

if test "$1" = clone; then
    shift
    git clone $host:$@
else
    ssh $host gerrit "$@"
fi
