#!/usr/bin/env bash

set -e
function die() {
    echo Error: "$@"
    exit -1
}

if test $# != 1; then
    die "Error: Usage $(basename $0) dir"
fi

if test ! -d "$1"; then
    die "Error: Usage $(basename $0) dir"
fi

cd "$1"

(
    if ! flock -n 9; then
        cat <<EOF > .lock-failed
Can't lock .$(basename $0).lock because of:
$(fuser .$(basename $0).lock)
EOF
        exit
    else
        echo start running > .log
    fi

    for x in $PWD/*; do
        echo run $x >> .log
        (cd /tmp; $x || true&)
    done
) 9> .$(basename $0).lock
