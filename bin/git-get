#!/bin/bash
set -e


## start code-generator "^\\s *#\\s *"
# generate-getopt d:dir u:url b:branch
## end code-generator
## start generated code
TEMP=$(getopt -o d:u:b: --long "dir:,url:,branch:"  -n $(basename -- $0) -- "$@")
dir=
url=
branch=
eval set -- "$TEMP"
while true; do
    case "$1" in
        -d|--dir)
            dir=$2
            shift 2
            ;;
        -u|--url)
            url=$2
            shift 2
            ;;
        -b|--branch)
            branch=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

## end generated code

branch=${branch:-master}


if test -z "$dir" -o -z "$url"; then
    die "Error: Usage $(basename $0) -d LOCAL_DIR -u REMOTE_GIT_URL"
fi

if test ! -d $dir/.git; then
    mkdir -p $dir
    (
        cd $dir
        git clone --single-branch -b $branch $url .
    )
else
    (
        cd $dir
        git pull
    )
fi
