#!/usr/bin/env perl

use Getopt::Long;
system("backup_bash_history");
open($file, "<", glob("~/.cache/system-config/.bash_history.bak"));
%hist_words;
@hist_words;

sub debug(@) {
  print STDERR "@_\n";
}

chomp($cmd = qx/basename $0/);

$ignore_case = 0;
GetOptions(
           "i!" => \$ignore_case,
          );

if ($cmd eq "hi") {
    while(<$file>) {
        while (m/((?:
               (?:"(?:\\.|[^\\])+?") |
 	       '.*' |
               (?:`(?:\\.|[^\\])+?`) |
               (?:\\.|[^"'\ \\|><\t\n])+
             )+)/xgi) {
            if (not $hist_words{$1}) {
                $hist_words{$1} = 1;
                push @hist_words, ($1);
            }
        }
    }
} else {
    while (<$file>) {
        chomp;
        next if m/^\s *$/;
        if (not $hist_words{$_}) {
            $hist_words{$_} = 1;
            push @hist_words, ($_);
        }
    }
}

@hist_matching_words = ();
foreach $key (@hist_words) {
    $key_matches = 1;
    foreach $arg (@ARGV) {
        if ($ignore_case and index(lc $key, lc $arg) == -1 or not $ignore_case and index($key, $arg) == -1) {
            $key_matches = 0;
            last;
        }
    }
    if ($key_matches) {
        push @hist_matching_words, ($key) unless $key eq $ARGV[0];
    }        
}

@hist_matching_words = reverse @hist_matching_words;
for (1..@hist_matching_words) {
    $key = $hist_matching_words[$_-1];
    print "$_) $key\n";
}

print "#? ";
$ans = <STDIN>;
chomp($ans);
if ($ans eq "") {
    $ans = 1;
}

if ($ans < 1) {
    $ans = 1;
} elsif ($ans > @hist_matching_words) {
    $ans = @hist_matching_words;
}

$ans = $hist_matching_words[$ans-1];
open($file, "|-", "putclip");
print $file "$ans\n";
