#!/bin/bash

branch=$(wgit symbolic-ref --short HEAD)
if test "$branch"; then
    remote=$(git config branch.$branch.remote)
    rbranch=$(git config branch.$branch.merge|xargs basename)
    if test "$rbranch"; then
        echo $remote/$rbranch
        exit 0
    fi
    if test "$remote"; then
        echo $remote/$branch
        exit 0
    fi
fi
echo origin/master
