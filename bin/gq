#!/bin/bash

cmd=$1
shift

if set -o|grep xtrace.*on -q; then
    bashx='bash -x'
else
    bashx=
fi

function die() {
    echo "$@"
    exit -1
}

export -f die

. "$(git --exec-path)/git-sh-setup"
export GIT_DIR
if test -x ~/system-config/bin/gq-"$cmd"; then
    $bashx $(wlp $(which gq-"$cmd")) "$@"; 
else
    $bashx $(wlp $(which guilt)) "$cmd" "$@"
fi
