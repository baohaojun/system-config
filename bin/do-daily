#!/bin/bash

mkdir -p ~/doc/daily
cd ~/doc/daily

day=${1:-$(date +%Y-%m-%d:%a)}
find-or-exec emacs
emacsclient -e '
  (progn
    (find-file "~/doc/daily.org")
    (goto-char (point-min))
    (if (search-forward-regexp "^\\* '${day}'" nil t)
        (progn
          (forward-line)
          (move-beginning-of-line))
      (goto-char (point-max))

      (insert "\n* '${day}'\n")))
'
