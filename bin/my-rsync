#!/bin/bash
function rsync() {
    local x
    local -a args=()
    local -a saved_args=("$@")
    local last_arg=${saved_args[$# - 1]}


    local n=0
    for x in "$@"; do
        ((n++))
        if test "${x:0:1}" != -; then
            need_ask=false
            if test $n != $# -a "${x:${#x}-1}" = /; then
                need_ask=true
            fi
            if test $((n + 1)) = $# -a "${x:${#x}-1}" = / -a "${last_arg:0:1}" = -; then
                need_ask=false
            fi
            if test $need_ask = true && { test -d "$x" || yes-or-no-p -y "Remove the trailing / for $x?"; };  then
                if test -d "$x"; then
                    echo removing / from the end of $x 1>&2
                fi
                args=("${args[@]}" "${x%/}")
                continue
            fi
        fi
        scp=/scp:
        if test "${x:0:${#scp}}" = /scp:; then
            x=${x#/scp:}
        fi
        args=("${args[@]}" "${x}")
    done
    set -- "${args[@]}"
    command rsync "$@"
}

if test "$(readlink -f "$BASH_SOURCE")" = "$(readlink -f "$(echo "$0" | grep / || which "$0")" )"; then
    rsync "$@"
fi
