#!/bin/bash

set -e
if test $# -lt 1; then
    die "Usage: $(basename $0) FROM [TO]"
fi

top=$(lookup-file .repo/..)
outd=$top/flashing/quilt/$(repo-tracking)/$(repo-path)/
mkdir -p $outd

(
    cd $outd
    git rm -rf . || true
)
rm -rf $outd

gq export $outd

git rev-parse $1 > $outd/.base
if test -n "$2"; then
    git rev-parse $2 > $outd/.result
else
    (
        set -x
        cd $top/flashing/
        git reset -- $outd/.result || true
        git checkout -- $outd.result || true
    )
fi

(
    cd $outd
    git add . || true
)
