#!/bin/bash

if test "$DEBUG" = true; then
    set -x
fi
if test "$PWD" = ~; then
    cd ~/system-config/
fi

cd $(dirname $(lookup-file -e .git))

function git-diff() {
    clear
    git diff "$@"
}

for x in $(git st -s |grep '^.\S' -P | pn 2); do
    if test -d "$x"; then
        continue
    fi
    if test ! -e "$x" && git st -s |grep -P -e "\Q$x\E" | grep "^RM"; then
        x=$(git st -s |grep -P -e "\Q$x\E" | grep "^RM" | pn 4)
    fi
    git-diff -w "$x";
    while true; do
        out=$(select-args yes no diff edit "@$PWD/$x");
        if test $out = diff; then
            git-diff -w "$x";
            continue;
        fi

        if test $out = edit; then
            ew "$x"
            git-diff -w "$x";
            continue
        fi

        if test $out = yes; then
            git add "$x"
        fi
        break
    done
done

. .gitx
git submodule foreach $0
