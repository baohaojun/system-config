#!/bin/bash
set -e

umask 0022

function die() {
    echo Error: "$@"
    exit -1
}

function compile_beagrep() {
    cd ~/src/github/beagrep


    ## start code-generator "^\\s *#\\s *"
    # generate-getopt iinstall-first
    ## end code-generator
    ## start generated code
    TEMP=$( getopt -o ih \
                   --long install-first,help,no-install-first \
                   -n $(basename -- $0) -- "$@")
    declare install_first=false
    eval set -- "$TEMP"
    while true; do
        case "$1" in

            -i|--install-first|--no-install-first)
                if test "$1" = --no-install-first; then
                    install_first=false
                else
                    install_first=true
                fi
                shift

                ;;
            -h|--help)
                set +x
                echo -e
                echo
                echo Options and arguments:
                printf %06s '-i, '
                printf %-24s '--[no-]install-first'
                echo
                exit
                shift
                ;;
            --)
                shift
                break
                ;;
            *)
                die "internal error: $(. bt; echo; bt | indent-stdin)"
                ;;
        esac
    done


    ## end generated code

    if test "${install_first}" = true; then
        sudo apt-get install $(cat debian/control | perl -ne 'print if m/Build-Depends/..m/Standards-Version/'|grep -v -e Build-Depends:\\\|Standards-Version|perl -npe 's/,/ /g')
    fi

    if test "$do_clean" = true; then
        git clean -xfd

        if test -e /usr/lib/pkgconfig/gmime-sharp-2.6.pc/gmime-sharp-2.6.pc; then
            (
                cd /usr/lib/pkgconfig/
                sudo mv gmime-sharp-2.6.pc/gmime-sharp-2.6.pc gmime-sharp-2.6.pc.2
                sudo rmdir gmime-sharp-2.6.pc
                sudo mv gmime-sharp-2.6.pc.2 gmime-sharp-2.6.pc
            )
        fi
        autoreconf -i
        if test -e /opt/local/bin/bash; then
            ./configure --prefix=/opt/local "$@"
        else
            ./configure "$@"
        fi
    fi
    make
    sudo make install
}

function compile_beagle() {
    cd ~/src/github/beagle/beagle
    git clean -xfd

    if test -e /usr/lib/pkgconfig/gmime-sharp-2.6.pc/gmime-sharp-2.6.pc; then
        (
            cd /usr/lib/pkgconfig/
            sudo mv gmime-sharp-2.6.pc/gmime-sharp-2.6.pc gmime-sharp-2.6.pc.2
            sudo rmdir gmime-sharp-2.6.pc
            sudo mv gmime-sharp-2.6.pc.2 gmime-sharp-2.6.pc
        )
    fi
    ./autogen.sh
    if test -e /opt/local/bin/bash; then
        ./configure --prefix=/opt/local
    else
        ./configure
    fi
    make
    sudo make install
}

function compile_local_beagrep() {
    (
        cd ~/external/
        if test -e "external-local"; then
            rmdir local || true
            mv  external-local local
        fi
        cd local
        command rsync code3:external/local/ . -av
        git add .
        if git st -s | grep . -q; then
            die "code3 local not clean";
        fi
    )
    cd ~/system-config/gcode/beagrep
    if git st -s | grep . -q; then
        die "git not clean"
    fi
    git clean -xfd
    . .gitx

    git checkout -B origin/sans-glib
    git merge master
    psync -d code3 .
    ssh code3 "cd $PWD; autoreconf -i && ./configure --prefix=$(echo ~/external/local) && make -j200 && make install"
    (
        cd ~/external/local
        command rsync code3:external/local/ . -av
        cd ..
        mv local external-local
    )
}


function compile_uncomment_java() {
    cd ~/system-config/gcode/UncommentJava/
    make
    git clean -xfd
}

function compile_fcitx() {
    cd ~/system-config/gcode/fcitx/
    ./bootstrap
    ./configure
    make
    sudo make install
    git clean -xfd
}

function compile_ibus_sdim() {
    cd ~/system-config/gcode/ibus-sdim/
    ./autogen.sh
    make
    sudo make DESTDIR=/ install
    git clean -xfd
}

function compile_gtags() {
    cd ~/src/github/ajoke/external/global
    git clean -xfd
    sh reconf.sh
    ./configure
    make
    sudo make install
}

function compile_ctags() {
    cd ~/src/github/ajoke/external/ctags-exuberant
    git clean -xfd
    autoreconf -i
    ./configure "$@" --program-suffix=-exuberant
    make
    sudo make install
}


function do_compile() {
    compile_beagrep "$@"
    compile_uncomment_java "$@"
    compile_gtags "$@"
    compile_ibus_sdim "$@"
    compile_ctags "$@"
}

if echo $SHELLOPTS | grep -q xtrace; then
    export DEBUG_COMPILE=true
fi


## start code-generator "^\\s *#\\s *"
# generate-getopt cdo-clean=true @sudo=true
## end code-generator
## start generated code
TEMP=$(getopt -o ch \
              --long do-clean,sudo,help,no-do-clean,no-sudo \
              -n $(basename -- $0) -- "$@")
do_clean=true
sudo=true
eval set -- "$TEMP"
while true; do
    case "$1" in

        -c|--do-clean|--no-do-clean)
            if test "$1" = --no-do-clean; then
                do_clean=false
            else
                do_clean=true
            fi
            shift
            ;;
        --sudo|--no-sudo)
            if test "$1" = --no-sudo; then
                sudo=false
            else
                sudo=true
            fi
            shift
            ;;
        -h|--help)
            set +x
            echo
            echo
            echo Options and arguments:
            printf %06s '-c, '
            printf %-24s '--[no-]do-clean'
            echo
            printf "%06s" " "
            printf %-24s '--[no-]sudo'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code


if test "$DEBUG_COMPILE" = true; then
    export CFLAGS='-g -O0 -DDEBUG'
    function git() {
        if test $# = 2 -a "$1" = clean; then
            true
        else
            command git "$@"
        fi
    }
fi

if test "$sudo" = false; then
    function sudo() {
        "$@"
    }
fi

`basename $0` "$@"
