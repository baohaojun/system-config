#!/bin/bash

if test "$1" = -d; then
    shift
    find-or-exec emacs&
fi

if test $# = 1; then
    set -- "$(ulp "$1")"
elif test $# = 2 && test -e "$2"; then
    set -- "$1" "$(ulp "$2")"
elif test $# = 3 && test -e "$3"; then
    set -- "$1" "$2" "$(ulp "$3")"
fi

if test -z "$LOCAL_EDIT" -a $# = 2 -a -e "$2"; then
    if test "$(fstype "$2")" = fuse.sshfs; then
        set -x
        set -- "$1" "$(get-scp-from-sshfs "$2")"
    fi
fi

if test -x /Applications/Emacs.app/Contents/MacOS/bin/emacsclient; then
    exec /Applications/Emacs.app/Contents/MacOS/bin/emacsclient "$@"
else
    exec /usr/bin/emacsclient "$@"
fi
