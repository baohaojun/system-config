#!/bin/bash

(
    echo '# -*- mode: compilation -*-'

    cd $(lookup-file .repo/..);
    . build/envsetup.sh;
    cd boot;
    BUILD_UBOOT_OBM=true;
    set -x;
    . ../.buildenv.sh;
    cd uboot;
    if test $# = 1 && yes-or-no-p "Do configuration $1?"; then
        git clean -xfd
        time make -j8 $1
    fi
    time make -j8 -k
) 2>&1 | tee ~/.cache/system-config/logs/$(basename $0).txt
