#!/bin/bash

putclip "shit"

for x in $(seq 1 5); do
    sawfish-browser-input C-l C-c $(if test $(basename $(readlink -f $(which the-firefox))) = firefox; then echo TAB TAB; fi 2>/dev/null)
    out=$(
        getclip |grep . ||
        xclip -o
    )

    if test "$out" = shit; then
        echo out not ready >> ~/.logs/$(basename $0).log
        for y in $(seq 1 5); do
            sleep .03
            out=$(
                getclip |grep . ||
                xclip -o
            )
            if test "$out" != shit; then
                echo out became "'$out'" at $x/$y >> ~/.logs/$(basename $0).log
                echo -n ${out%/}
                exit 0
            fi
        done
    else
        echo -n ${out%/}
        exit 0
    fi
done

sawfish-browser-input C-l C-e SPC # so that the url bar is not empty
