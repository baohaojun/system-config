#!/bin/bash
set -e

export SELECT_PROMPT="Please enter your selection: "

if test "${1:0:1}" = -; then
    TEMP=$(getopt -o p: --long prompt: -n $(basename $0) -- "$@")
    eval set -- "$TEMP"
    while true; do
        case "$1" in
            -p|--prompt)
                SELECT_PROMPT=$2
                shift 2
                ;;
            --)
                shift
                break
                ;;
            *)
                die "internal error"
                ;;
        esac
    done
fi

IFS=$'\n'
dood=(
    $(
        if test $# = 1; then
            bash -c "$1"
        else
            "$@"
        fi
    )
) || true
if test ${#dood[@]} = 0; then
    exit -1
fi
n=$(my-select "${dood[@]}")

if echo "$n" | grep -q -P -e '^[0-9]+$' && test "$n" -ge 1 -a $n -le ${#dood[@]}; then
    echo ${dood[n-1]}
else
    echo "$n"
fi
