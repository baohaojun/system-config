#!/bin/bash

set -e
## start code-generator "^\\s *#\\s *"
# generate-getopt w:what=test m:max=5
## end code-generator
## start generated code
TEMP=$( getopt -o m:w:h \
               --long max:,what:,help \
               -n $(basename -- $0) -- "$@")
declare max=5
declare what=test
eval set -- "$TEMP"
while true; do
    case "$1" in

        -m|--max)
            max=$2
            shift 2

            ;;
        -w|--what)
            what=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-m, '
            printf %-24s '--max=MAX'
            echo
            printf %06s '-w, '
            printf %-24s '--what=WHAT'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if [[ $what =~ / ]]; then
    die "Can't have / in $what, it's dangerous"
fi

. force-1 "$what".lock

if test ! -e ~/.cache/system-config/get-seq/$what/seq; then
    mkdir -p ~/.cache/system-config/get-seq/$what
    echo 0 > ~/.cache/system-config/get-seq/$what/seq
fi

seq=$(
    cat ~/.cache/system-config/get-seq/$what/seq
   )
echo $seq
seq=$((++seq % max))
echo $seq > ~/.cache/system-config/get-seq/$what/seq
