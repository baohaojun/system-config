#!/usr/bin/env perl

use strict;
use Getopt::Long;
use FindBin;
use lib $FindBin::Bin;
use pretty;

use Getopt::Long;
my $binary;
GetOptions(
    "b!" => \$binary,
    );

if (@ARGV) {
  for (@ARGV) {
    printf("%s %d 0x%08x\n", pretty(un_pretty($_)), un_pretty($_), un_pretty($_));
    if ($binary) {
        my @x;
        my $num = un_pretty($_);

        while ($num) {
            push @x, "" . ($num % 2);
            $num -= ($num % 2);
            $num /= 2;
        }
        print "0b" . join("", reverse(@x)) . "\n";
    }
  }
} else {
  while (<>) {
    printf("%s %d 0x%08x\n", pretty(un_pretty($_)), un_pretty($_), un_pretty($_));
  }
}
