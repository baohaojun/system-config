#!/usr/bin/perl
use strict;
sub symlink_($@) {
    my ($source, @targets) = @_;
    for (@targets) {
	system("echo ln -s $source '$_'");
    }
}

sub set_perm_recursive($$$$$)
{
    #0, 0, 0755, 0644, "/system"
    my ($uid, $gid, $dmask, $fmask, $path) = @_;
    print "chown $uid:$gid -R $path\n";
    printf "find $path -type d | xargs chmod 0%o\n", $dmask;
    printf "find $path -type f | xargs chmod 0%o\n", $fmask;
}

sub set_perm($$$$) {
    my ($uid, $gid, $fmask, $path) = @_;
    print "chown $uid:$gid -R $path\n";
    printf "echo $path | xargs chmod 0%o\n", $fmask;
}

