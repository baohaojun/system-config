#!/bin/bash

while test $(ifconfig|grep 'inet addr'|wc -l) -lt 2; do # wait for a network connection
    sleep 5
done

cd /tmp

flag=~/.config/no-ww

function start-ww() {
    mkdir -p ~/.logs

    (
        while true; do
            if test -e $flag; then
                exit
            fi
            (
                flock 9
                AliWangWang
            )
            sleep 5
        done&
    ) 9> ~/.logs/ww.lock
}

start-ww
HOME=~/tmp start-ww
